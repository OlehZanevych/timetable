type FacultyQueries {
    facultyConnection(limit: Int! = 1000, offset: Int! = 0): FacultyConnection
    faculty(id: ID!): Faculty
}

type FacultyConnection {
    nodes: [Faculty!]!
    pageInfo: ConnectionPageInfo!
}

type Faculty {
    id: ID!
    name: String!
    website: String!
    email: String!
    phone: String!
    address: String!
    logoUri: String
    info: String
    departments: [DepartmentItem!]
}